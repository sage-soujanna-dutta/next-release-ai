{
  "name": "release-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for automated release notes generation with JIRA and GitHub integration",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "mcp-server": "tsx src/dual-server.ts",
    "mcp-server:stdio": "tsx src/dual-server.ts",
    "mcp-server:http": "tsx src/dual-server.ts http",
    "server": "tsx src/server.ts",
    "server:prod": "node dist/server.js",
    "build": "tsc",
    "build:docker": "docker build -t next-release-ai-mcp .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.6.1",
    "express": "^4.18.0",
    "jsdom": "^23.0.0",
    "marked": "^9.0.0",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^24.0.13",
    "tsx": "^4.6.2",
    "typescript": "^5.1.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "release-notes",
    "jira",
    "github",
    "confluence",
    "automation"
  ]
}